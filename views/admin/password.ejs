<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Application</title>
    <link rel="stylesheet" href="/layout.css">
    <script>
        function checkpasswords() {
            const password1 = document.getElementById('newpassword').value;
            const password2 = document.getElementById('confirmpassword').value;
            const message = document.getElementById('message');
            const submitButton = document.getElementById('submitbutton');
            
            if (password1 === password2 && password1.length > 0) {
                message.textContent = 'New passwords match';
                message.style.color = 'green';
                submitbutton.disabled = false;
            } else {
                message.textContent = 'New passwords do not match';
                message.style.color = 'red';
                submitbutton.disabled = true;
            }
        }
    </script>

</head>
<body>
    <%- include('../partials/header.ejs') %>
    <div class="container-fluid">
        <form action="/admin/password" method="post">
                <label for="oldpassword">Old Password:</label>
                <input type="password" id="oldpassword" name="oldpassword"">
                <br>
                <label for="newpassword">New Password:</label>
                <input type="password" id="newpassword" name="newpassword">
                <br>
                <label for="confirmpassword">Confirm New Password:</label>
                <input type="password" id="confirmpassword" name="confirmpassword" oninput="checkpasswords()">
                <div id="message"></div>
            <button type="submit" id="submitbutton" disabled>Change Password</button>
        </form>    
        <%=locals.message%>

    </div>
</body>
</html>